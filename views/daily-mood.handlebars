<script language="javascript">
    function changeImage() {
        if (document.getElementById("imgClickAndChange").src == "../images/crying-orange.png")
        {
            document.getElementById("imgClickAndChange").src = "../images/crying-green.png";
        }
        if (document.getElementById("imgClickAndChange").src == "../images/crying-green.png")
        {
            document.getElementById("imgClickAndChange").src = "../images/crying-orange.png";
        }
				else
				{
					document.getElementById("imgClickAndChange").src = "../images/crying-green.png";
				}
    }
</script>

<script>
  $(document).ready(function(){
 $('#myForm input').on('change', function(){
 	localStorage.clear();
 	localStorage.setItem('moods', $('input[name=moods]:checked', '#myForm').val());
 });
  });
</script>
