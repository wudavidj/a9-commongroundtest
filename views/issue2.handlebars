<script>
// Get the container element
var btnContainer = document.getElementById("dropdown-content");

// Get all buttons with class="btn" inside the container
var btns = btnContainer.getElementsByClassName("issueTitle");

// Loop through the buttons and add the active class to the current/clicked button
for (var i = 0; i < btns.length; i++) {
  // click listener
  btns[i].addEventListener("click", function() {

  // get the "active" class
  var current = document.getElementsByClassName("active");

  // turn "active" inactive
  current[0].className = current[0].className.replace(" active", "");

  // turn clicked class "active"
  this.className += " active";

  // get the title of new "active" class
  var newActive = document.getElementsByClassName(" active");
  localStorage.setItem('selectedIssue', newActive[0].textContent);

  // .html title (needs [0] because newActive is an array)
  $(".title-sample").html(newActive[0].textContent);

});
}

