    function goBack(){
      window.history.back();
    }


    $(document).ready(function() {
      initializePage();
    })

    function initializePage(){
      loadJSON();
    }

    function loadJSON(){
      var issueName = $('.issue').attr('id');
      var url = '/chart/' + issueName;
      $.get(url, callBack);
      console.log("Drawing chart " + issueName);
    }

    function callBack(result){
      var data = result;
      google.charts.load('current', {packages:['corechart']});
      google.charts.setOnLoadCallback(drawChart);
      function drawChart(){
        var data = new google.visualization.DataTable();
        data.addColumn('date', 'Date');
        data.addColumn('number', 'Mood Log');
        data.addColumn({type: 'string', role: 'annotation'});
        var ticksX = [];
        var ticksY = [];
        var length = result.length;
        for (var i=0; i < length ; i++){
        //var day = result[i].month + "." + result[i].day;
          var temp = result[i].month - 1;
          var date = new Date(2018, temp, result[i].day);
          var mood = convertMood(result[i].emoji);
          data.addRow([date, {v: mood, f:result[i].emoji}, result[i].emoji]);
      }
      for (var i=0; i<data.getNumberOfRows(); i++){
        ticksX.push(data.getValue(i, 0));
        ticksY.push(data.getValue(i, 1));
      }
      console.log(data);
      var options = {
        hAxis: {
          title: 'Time',
          ticks: ticksX
        },
        vAxis: {
          title: 'Mood',
          ticks: ticksY,
          minValue: 0
        },
        legend: {position: 'none'},
        curveType: 'function',
        pointSize: 5,
        colors:['#33CC99']
        /*
        series: {
          1: {fill-color: '#ff2244'},
          2: {fill-color: '#ffcc33'},
          3: {fill-color: '#00aaff'},
          4: {fill-color: '#4a90e2'},
          5: {fill-color: '#0055ff'},
        }*/
      }
      var chart = new google.visualization.LineChart(document.getElementById('donutchart'));
      chart.draw(data, options);
      }
    }

    function convertMood(mood){
      if (mood == "Happy")
        return 5;
      if (mood == "Meh")
        return 4;
      if (mood == "Unhappy")
        return 3;
      if (mood == "Crying")
        return 2;
      if (mood == "Angry")
        return 1;
    }


  </script>



